---
const currentPath = Astro.url.pathname;
const tabs = [
  { href: '/salud/vacunas', label: 'Vacunas' },
  { href: '/salud/historial', label: 'Veterinario' },
  { href: '/salud/peso', label: 'Peso' },
  { href: '/salud/grooming', label: 'Grooming' },
];
---

<div class="flex gap-0 mb-6 border-b border-card-border animate-fade-up animate-fade-up-delay-1">
  {tabs.map((tab) => (
    <a
      href={tab.href}
      class:list={[
        'px-4 py-2.5 text-sm font-medium transition-all duration-200 border-b-2 -mb-px',
        currentPath === tab.href
          ? 'border-accent text-accent'
          : 'border-transparent text-muted hover:text-ink',
      ]}
    >
      {tab.label}
    </a>
  ))}
</div>
