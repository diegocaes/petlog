---
const currentPath = Astro.url.pathname;
const tabs = [
  { href: '/salud/vacunas', label: 'Vacunas' },
  { href: '/salud/historial', label: 'Veterinario' },
  { href: '/salud/peso', label: 'Peso' },
  { href: '/salud/grooming', label: 'Grooming' },
];
---

<div class="flex gap-1 mb-5 rounded-2xl bg-cream-dark/50 p-1 animate-fade-up animate-fade-up-delay-1">
  {tabs.map((tab) => (
    <a
      href={tab.href}
      class:list={[
        'flex-1 rounded-xl px-2 py-2.5 text-center text-xs sm:text-sm font-medium transition-all duration-200',
        currentPath === tab.href
          ? 'bg-white text-forest shadow-sm'
          : 'text-gray-500 hover:text-gray-700',
      ]}
    >
      {tab.label}
    </a>
  ))}
</div>
