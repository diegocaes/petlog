---
interface Props {
  icon: 'vaccine' | 'vet' | 'food' | 'travel' | 'adventure' | 'weight' | 'grooming';
  title: string;
  description?: string;
}

const { icon, title, description } = Astro.props;

const iconColors: Record<string, { bg: string; text: string }> = {
  vaccine:   { bg: 'bg-accent/10',   text: 'text-accent' },
  vet:       { bg: 'bg-accent/10',   text: 'text-accent' },
  food:      { bg: 'bg-amber/10',    text: 'text-amber' },
  travel:    { bg: 'bg-purple-100',  text: 'text-purple-400' },
  adventure: { bg: 'bg-sky-100',     text: 'text-sky-400' },
  weight:    { bg: 'bg-amber/10',    text: 'text-amber' },
  grooming:  { bg: 'bg-pink-100',    text: 'text-pink-400' },
};

const colors = iconColors[icon] || iconColors.vet;
---

<div class="rounded-xl bg-card border border-card-border p-10 text-center animate-scale-in">
  <div class:list={['mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl animate-float', colors.bg]}>
    {icon === 'vaccine' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="m14.5 2-8.5 8.5v4h4l8.5-8.5a2.83 2.83 0 0 0-4-4z"/><path d="m18 2 4 4"/>
      </svg>
    )}
    {icon === 'vet' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572"/>
        <path d="M3 12h4l2 -3l4 6l2 -3h4"/>
      </svg>
    )}
    {icon === 'food' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/>
      </svg>
    )}
    {icon === 'travel' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/>
      </svg>
    )}
    {icon === 'adventure' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"/><circle cx="12" cy="13" r="3"/>
      </svg>
    )}
    {icon === 'weight' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"/><path d="M8 12a4 4 0 0 1 8 0"/><line x1="12" y1="12" x2="12" y2="8"/>
      </svg>
    )}
    {icon === 'grooming' && (
      <svg class:list={['h-7 w-7', colors.text]} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"/>
        <path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"/>
      </svg>
    )}
  </div>
  <p class="text-sm font-semibold text-ink">{title}</p>
  {description && <p class="text-xs text-muted mt-1.5 max-w-xs mx-auto leading-relaxed">{description}</p>}
</div>
