---
interface Props {
  title: string;
  subtitle?: string;
  action?: { href: string; label: string };
}

const { title, subtitle, action } = Astro.props;
---

<div class="mb-6 flex items-end justify-between animate-fade-up">
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-800">{title}</h1>
    {subtitle && <p class="text-sm text-gray-400 mt-1">{subtitle}</p>}
    <div class="mt-2.5 h-1 w-12 rounded-full bg-gradient-to-r from-forest to-amber"></div>
  </div>
  {action && (
    <a href={action.href} class="text-sm font-medium text-forest hover:text-forest-light transition-colors">
      {action.label} â†’
    </a>
  )}
</div>
