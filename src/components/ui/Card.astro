---
interface Props {
  class?: string;
  padding?: boolean;
  variant?: 'default' | 'glass' | 'elevated';
}

const { class: className = '', padding = true, variant = 'default' } = Astro.props;

const variantClasses: Record<string, string> = {
  default: 'bg-white shadow-sm border border-cream-dark/50',
  glass: 'bg-white/70 backdrop-blur-xl border border-white/40 shadow-lg',
  elevated: 'bg-white shadow-md hover:shadow-lg transition-shadow duration-300 border border-cream-dark/30',
};
---

<div class:list={[
  'rounded-3xl overflow-hidden',
  variantClasses[variant],
  { 'p-5 sm:p-6': padding },
  className,
]}>
  <slot />
</div>
