---
import MainLayout from '../layouts/MainLayout.astro';
import Card from '../components/ui/Card.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import EmptyState from '../components/ui/EmptyState.astro';
import { formatDate } from '../lib/utils';
import { getActivePet } from '../lib/pet';
import { uploadPetPhoto } from '../lib/storage';

const { supabase, user, activePetId } = Astro.locals;

const { pet } = await getActivePet(supabase, user.id, activePetId);

if (!pet) return Astro.redirect('/perfil?new=1');

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;

  if (action === 'add') {
    const photo_url = await uploadPetPhoto(formData.get('photo') as File, user.id, supabase, 'adventures');

    await supabase.from('adventures').insert({
      pet_id: pet.id,
      title: formData.get('title') as string,
      description: (formData.get('description') as string) || null,
      date: formData.get('date') as string,
      location: (formData.get('location') as string) || null,
      photo_url,
    });
  }

  if (action === 'edit') {
    const adventureId = formData.get('adventure_id') as string;
    const updateData: Record<string, unknown> = {
      title: formData.get('title') as string,
      description: (formData.get('description') as string) || null,
      date: formData.get('date') as string,
      location: (formData.get('location') as string) || null,
    };

    // Handle optional new photo
    const newPhotoUrl = await uploadPetPhoto(formData.get('photo') as File, user.id, supabase, 'adventures');
    if (newPhotoUrl) updateData.photo_url = newPhotoUrl;

    await supabase.from('adventures').update(updateData).eq('id', adventureId);
  }

  if (action === 'delete') {
    const adventureId = formData.get('adventure_id') as string;
    await supabase.from('adventures').delete().eq('id', adventureId);
    return Astro.redirect('/aventuras?deleted=1');
  }

  return Astro.redirect('/aventuras?saved=1');
}

const { data: adventures } = await supabase
  .from('adventures')
  .select('*')
  .eq('pet_id', pet.id)
  .order('date', { ascending: false });
---

<MainLayout title="Aventuras">
  <SectionHeader title="Aventuras" subtitle="Las mejores fotos de tu mascota" />

  <!-- Add Adventure Form -->
  <Card class="mb-5 animate-fade-up animate-fade-up-delay-1">
    <h2 class="text-xs font-semibold text-muted uppercase tracking-widest mb-4">Nueva aventura</h2>
    <form method="POST" enctype="multipart/form-data" class="space-y-4">
      <input type="hidden" name="_action" value="add" />
      <div>
        <label class="block text-sm font-medium text-ink mb-1">T√≠tulo <span class="text-red-500">*</span></label>
        <input type="text" name="title" required placeholder="Ej: D√≠a en la playa" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-ink placeholder-muted focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-ink mb-1">Fecha <span class="text-red-500">*</span></label>
          <input type="date" name="date" required class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-ink focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
        </div>
        <div>
          <label class="block text-sm font-medium text-ink mb-1">Lugar</label>
          <input type="text" name="location" placeholder="Ej: Parque central" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-ink placeholder-muted focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-ink mb-1">Descripci√≥n</label>
        <textarea name="description" rows="2" placeholder="¬øQu√© hicieron hoy?" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-ink placeholder-muted focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20 resize-none"></textarea>
      </div>
      <div>
        <label class="block text-sm font-medium text-ink mb-1">Foto</label>
        <input type="file" name="photo" accept="image/*" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-ink file:mr-4 file:rounded-lg file:border-0 file:bg-accent/10 file:px-4 file:py-1.5 file:text-sm file:font-medium file:text-accent" />
      </div>
      <button type="submit" class="w-full rounded-xl bg-amber px-6 py-2.5 text-sm font-semibold text-gray-900 transition-all hover:bg-amber-dark active:scale-95">
        Guardar aventura
      </button>
    </form>
  </Card>

  <!-- Adventures Grid -->
  {(!adventures || adventures.length === 0) ? (
    <EmptyState
      icon="adventure"
      title="Sin aventuras registradas"
      description="Registra la primera aventura de tu mascota"
    />
  ) : (
    <div class="space-y-4">
      {adventures.map((adv, i) => (
        <Card variant="elevated" class:list={['animate-fade-up', i < 5 && `animate-fade-up-delay-${Math.min(i + 1, 5)}`, i >= 4 && 'collapse-item hidden']}>
          {/* View */}
          <div class="item-view" data-id={adv.id}>
            <div class="flex gap-4">
              {adv.photo_url ? (
                <button
                  type="button"
                  class="lightbox-trigger h-24 w-24 shrink-0 rounded-2xl overflow-hidden ring-0 transition-all hover:ring-2 hover:ring-forest/30 active:scale-95"
                  data-src={adv.photo_url}
                  data-title={adv.title}
                  data-date={adv.date}
                  data-location={adv.location || ''}
                  aria-label={`Ver foto de ${adv.title}`}
                >
                  <img src={adv.photo_url} alt={adv.title} class="h-full w-full object-cover" />
                </button>
              ) : (
                <div class="h-24 w-24 shrink-0 rounded-2xl bg-canvas flex items-center justify-center text-3xl">üêæ</div>
              )}
              <div class="flex-1 min-w-0">
                <div class="flex items-start justify-between gap-2">
                  <div class="min-w-0">
                    <p class="font-semibold text-ink truncate">{adv.title}</p>
                    <p class="text-xs text-gray-400 mt-0.5">
                      {formatDate(adv.date)}
                      {adv.location && ` ¬∑ ${adv.location}`}
                    </p>
                  </div>
                  <div class="flex gap-1 shrink-0">
                    <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-accent/10 hover:text-accent" data-id={adv.id} title="Editar">
                      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                    </button>
                    <form method="POST">
                      <input type="hidden" name="_action" value="delete" />
                      <input type="hidden" name="adventure_id" value={adv.id} />
                      <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                      </button>
                    </form>
                  </div>
                </div>
                {adv.description && (
                  <p class="text-sm text-gray-500 mt-2 line-clamp-2">{adv.description}</p>
                )}
              </div>
            </div>
          </div>

          {/* Edit */}
          <form method="POST" enctype="multipart/form-data" class="item-edit hidden space-y-3" data-id={adv.id}>
            <input type="hidden" name="_action" value="edit" />
            <input type="hidden" name="adventure_id" value={adv.id} />
            <div class="flex items-center justify-between mb-2">
              <p class="text-xs font-semibold text-accent uppercase tracking-wider">Editando</p>
              <button type="button" class="cancel-edit text-xs text-gray-400 hover:text-gray-600" data-id={adv.id}>Cancelar</button>
            </div>
            <input type="text" name="title" value={adv.title} required placeholder="T√≠tulo" class="field-input-sm" />
            <div class="grid grid-cols-2 gap-3">
              <input type="date" name="date" value={adv.date} required class="field-input-sm" />
              <input type="text" name="location" value={adv.location || ''} placeholder="Lugar" class="field-input-sm" />
            </div>
            <textarea name="description" rows="2" placeholder="Descripci√≥n" class="field-input-sm resize-none">{adv.description || ''}</textarea>
            <div>
              <label class="block text-xs text-gray-400 mb-1">Cambiar foto (opcional)</label>
              <input type="file" name="photo" accept="image/*" class="w-full rounded-xl border border-card-border bg-white px-3 py-2 text-sm text-ink file:mr-2 file:rounded-lg file:border-0 file:bg-accent/10 file:px-3 file:py-1 file:text-xs file:font-medium file:text-accent" />
            </div>
            <button type="submit" class="w-full rounded-xl bg-accent px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
              Guardar cambios
            </button>
          </form>
        </Card>
      ))}
    </div>
  )}

  {/* Show more button ‚Äî visible only if >4 adventures */}
  {adventures && adventures.length > 4 && (
    <button
      id="show-more-btn"
      type="button"
      class="mt-3 w-full rounded-xl border border-card-border py-3 text-sm font-medium text-muted transition-all hover:bg-canvas hover:text-ink active:scale-95"
    >
      Ver {adventures.length - 4} aventura{adventures.length - 4 !== 1 ? 's' : ''} m√°s
    </button>
  )}

  {/* Lightbox dialog */}
  <dialog
    id="lightbox"
    class="fixed inset-0 m-0 h-full w-full max-h-full max-w-full bg-transparent p-0 backdrop:bg-black/80 backdrop:backdrop-blur-sm"
  >
    <div class="flex h-full w-full items-center justify-center p-4">
      <div class="relative w-full max-w-lg">
        {/* Close button */}
        <button
          id="lightbox-close"
          type="button"
          class="absolute -top-12 right-0 flex h-10 w-10 items-center justify-center rounded-full bg-white/20 text-white transition-all hover:bg-white/30 active:scale-90"
          aria-label="Cerrar"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 6 6 18M6 6l12 12"/></svg>
        </button>
        {/* Image */}
        <img
          id="lightbox-img"
          src=""
          alt=""
          class="w-full rounded-3xl object-contain max-h-screen shadow-2xl"
        />
        {/* Caption */}
        <div class="mt-3 text-center text-white">
          <p id="lightbox-title" class="font-semibold text-lg"></p>
          <p id="lightbox-meta" class="text-sm text-white/70 mt-0.5"></p>
        </div>
      </div>
    </div>
  </dialog>

  <script>
    // Edit/cancel toggle
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });

    // Haptic feedback on delete
    document.querySelectorAll<HTMLFormElement>('form[method="POST"]').forEach(form => {
      const actionInput = form.querySelector<HTMLInputElement>('input[name="_action"]');
      if (actionInput?.value === 'delete') {
        form.addEventListener('submit', () => {
          if ('vibrate' in navigator) navigator.vibrate([10, 50, 10]);
        });
      }
    });

    // Show more
    const showMoreBtn = document.getElementById('show-more-btn');
    if (showMoreBtn) {
      showMoreBtn.addEventListener('click', () => {
        document.querySelectorAll('.collapse-item').forEach(el => el.classList.remove('hidden'));
        showMoreBtn.remove();
      });
    }

    // Lightbox
    const lightbox = document.getElementById('lightbox') as HTMLDialogElement | null;
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement | null;
    const lightboxTitle = document.getElementById('lightbox-title');
    const lightboxMeta = document.getElementById('lightbox-meta');
    const lightboxClose = document.getElementById('lightbox-close');

    document.querySelectorAll<HTMLButtonElement>('.lightbox-trigger').forEach(btn => {
      btn.addEventListener('click', () => {
        if (!lightbox || !lightboxImg) return;
        const src = btn.dataset.src || '';
        const title = btn.dataset.title || '';
        const date = btn.dataset.date || '';
        const location = btn.dataset.location || '';

        lightboxImg.src = src;
        lightboxImg.alt = title;
        if (lightboxTitle) lightboxTitle.textContent = title;
        if (lightboxMeta) lightboxMeta.textContent = [date, location].filter(Boolean).join(' ¬∑ ');

        lightbox.showModal();
        if ('vibrate' in navigator) navigator.vibrate(8);
      });
    });

    lightboxClose?.addEventListener('click', () => lightbox?.close());
    lightbox?.addEventListener('click', (e) => {
      // Close if clicking the backdrop
      if (e.target === lightbox) lightbox.close();
    });

    // Close on Escape (native dialog behavior), but also reset src to avoid flash
    lightbox?.addEventListener('close', () => {
      if (lightboxImg) lightboxImg.src = '';
    });
  </script>
</MainLayout>
