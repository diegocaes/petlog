---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';
import SaludTabs from '../../components/SaludTabs.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import { formatDate } from '../../lib/utils';
import { getActivePet } from '../../lib/pet';

const { supabase, user, activePetId } = Astro.locals;
const { pet } = await getActivePet(supabase, user.id, activePetId);
if (!pet) return Astro.redirect('/perfil?new=1');

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;
  if (action === 'add') {
    await supabase.from('vet_visits').insert({
      pet_id: pet.id,
      date: formData.get('date') as string,
      reason: formData.get('reason') as string,
      vet_name: (formData.get('vet_name') as string) || null,
      location: (formData.get('location') as string) || null,
      diagnosis: (formData.get('diagnosis') as string) || null,
      treatment: (formData.get('treatment') as string) || null,
      cost: formData.get('cost') ? Number(formData.get('cost')) : null,
      notes: (formData.get('notes') as string) || null,
    });
  }
  if (action === 'edit') {
    const visitId = formData.get('visit_id') as string;
    await supabase.from('vet_visits').update({
      date: formData.get('date') as string,
      reason: formData.get('reason') as string,
      vet_name: (formData.get('vet_name') as string) || null,
      location: (formData.get('location') as string) || null,
      diagnosis: (formData.get('diagnosis') as string) || null,
      treatment: (formData.get('treatment') as string) || null,
      cost: formData.get('cost') ? Number(formData.get('cost')) : null,
      notes: (formData.get('notes') as string) || null,
    }).eq('id', visitId);
  }
  if (action === 'delete') {
    const visitId = formData.get('visit_id') as string;
    await supabase.from('vet_visits').delete().eq('id', visitId);
    return Astro.redirect('/salud/historial?deleted=1');
  }
  return Astro.redirect('/salud/historial?saved=1');
}

const { data: visits } = await supabase
  .from('vet_visits')
  .select('*')
  .eq('pet_id', pet.id)
  .order('date', { ascending: false });

// Analytics
const totalCost = visits?.reduce((sum, v) => sum + (v.cost ?? 0), 0) ?? 0;
const lastVisitDays = visits?.[0]
  ? Math.floor((Date.now() - new Date(visits[0].date + 'T00:00:00').getTime()) / 86400000)
  : null;
---

<MainLayout title="Historial Veterinario">
  <SaludTabs />

  {/* ── ANALYTICS ── */}
  {visits && visits.length > 0 ? (
    <div class="mb-5 animate-fade-up">
      <div class="grid grid-cols-3 gap-3">
        <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
          <p class="text-lg font-black text-ink">{visits.length}</p>
          <p class="text-[10px] text-muted font-medium mt-0.5">visitas</p>
        </div>
        <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
          <p class="text-lg font-black text-ink">{lastVisitDays !== null ? `${lastVisitDays}d` : '—'}</p>
          <p class="text-[10px] text-muted font-medium mt-0.5">última visita</p>
        </div>
        <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
          <p class="text-lg font-black text-ink">{totalCost > 0 ? `$${totalCost.toFixed(0)}` : '—'}</p>
          <p class="text-[10px] text-muted font-medium mt-0.5">total gastado</p>
        </div>
      </div>
    </div>
  ) : (
    <div class="mb-5 rounded-2xl border border-dashed border-card-border bg-card px-5 py-6 text-center animate-fade-up">
      <p class="text-sm font-semibold text-ink mb-1">Sin visitas registradas</p>
      <p class="text-xs text-muted">Registra las citas al veterinario para llevar un historial completo</p>
    </div>
  )}

  {/* ── FORM (colapsable) ── */}
  <div class="mb-5 animate-fade-up animate-fade-up-delay-1">
    <button
      type="button"
      id="toggle-historial-form"
      class="w-full flex items-center justify-between rounded-2xl bg-card border border-card-border px-4 py-3.5 transition-all hover:border-accent/30 active:scale-95"
    >
      <div class="flex items-center gap-2.5">
        <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-blue-50">
          <svg class="h-3.5 w-3.5 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12 5v14M5 12h14"/></svg>
        </div>
        <p class="text-sm font-semibold text-ink">Nueva visita</p>
      </div>
      <svg id="toggle-historial-icon" class="h-4 w-4 text-muted transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m6 9 6 6 6-6"/></svg>
    </button>

    <div id="historial-form-body" class="hidden mt-2">
      <Card>
        <form method="POST" class="space-y-4">
          <input type="hidden" name="_action" value="add" />
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-ink mb-1.5">Fecha <span class="text-red-500">*</span></label>
              <input type="date" name="date" required class="field-input" />
            </div>
            <div>
              <label class="block text-sm font-medium text-ink mb-1.5">Costo</label>
              <input type="number" name="cost" step="0.01" placeholder="0.00" class="field-input" />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-ink mb-1.5">Motivo <span class="text-red-500">*</span></label>
            <input type="text" name="reason" required placeholder="Ej: Revisión anual" class="field-input" />
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-ink mb-1.5">Veterinario</label>
              <input type="text" name="vet_name" placeholder="Dr. García" class="field-input" />
            </div>
            <div>
              <label class="block text-sm font-medium text-ink mb-1.5">Ciudad / Lugar</label>
              <input type="text" name="location" placeholder="Ej: Madrid, España" class="field-input" />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-ink mb-1.5">Diagnóstico</label>
            <textarea name="diagnosis" rows="2" placeholder="¿Qué encontró el veterinario?" class="field-input resize-none"></textarea>
          </div>
          <div>
            <label class="block text-sm font-medium text-ink mb-1.5">Tratamiento</label>
            <textarea name="treatment" rows="2" placeholder="Medicamentos, indicaciones..." class="field-input resize-none"></textarea>
          </div>
          <button type="submit" class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
            Registrar visita
          </button>
        </form>
      </Card>
    </div>
  </div>

  {/* ── HISTORIAL ── */}
  {visits && visits.length > 0 && (
    <p class="text-xs font-semibold text-muted uppercase tracking-widest mb-3">Historial</p>
  )}

  {(!visits || visits.length === 0) ? (
    <EmptyState icon="vet" title="Sin visitas registradas" description="Registra la primera visita al veterinario" />
  ) : (
    <div class="space-y-3">
      {visits.map((visit, i) => (
        <Card variant="elevated" class:list={['animate-fade-up', i < 5 && `animate-fade-up-delay-${Math.min(i + 1, 5)}`]}>
          <div class="item-view" data-id={visit.id}>
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <p class="font-semibold text-ink">{visit.reason}</p>
                  {visit.cost && (
                    <span class="shrink-0 rounded-full bg-amber/10 px-2 py-0.5 text-xs font-medium text-amber-dark">${visit.cost}</span>
                  )}
                </div>
                <p class="text-xs text-gray-400 mb-2">{formatDate(visit.date)}{visit.vet_name && ` · ${visit.vet_name}`}{visit.location && ` · ${visit.location}`}</p>
                {visit.diagnosis && <p class="text-sm text-gray-600 mb-1"><strong>Diagnóstico:</strong> {visit.diagnosis}</p>}
                {visit.treatment && <p class="text-sm text-gray-600"><strong>Tratamiento:</strong> {visit.treatment}</p>}
                {visit.notes && <p class="text-xs text-gray-400 mt-1">{visit.notes}</p>}
              </div>
              <div class="flex gap-1 shrink-0">
                <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-accent/10 hover:text-accent" data-id={visit.id} title="Editar">
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                </button>
                <form method="POST">
                  <input type="hidden" name="_action" value="delete" />
                  <input type="hidden" name="visit_id" value={visit.id} />
                  <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                  </button>
                </form>
              </div>
            </div>
          </div>

          <form method="POST" class="item-edit hidden space-y-3" data-id={visit.id}>
            <input type="hidden" name="_action" value="edit" />
            <input type="hidden" name="visit_id" value={visit.id} />
            <div class="flex items-center justify-between mb-2">
              <p class="text-xs font-semibold text-accent uppercase tracking-wider">Editando</p>
              <button type="button" class="cancel-edit text-xs text-gray-400 hover:text-gray-600" data-id={visit.id}>Cancelar</button>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <input type="date" name="date" value={visit.date} required class="field-input-sm" />
              <input type="number" name="cost" step="0.01" value={visit.cost || ''} placeholder="Costo" class="field-input-sm" />
            </div>
            <input type="text" name="reason" value={visit.reason} required placeholder="Motivo" class="field-input-sm" />
            <div class="grid grid-cols-2 gap-3">
              <input type="text" name="vet_name" value={visit.vet_name || ''} placeholder="Veterinario" class="field-input-sm" />
              <input type="text" name="location" value={visit.location || ''} placeholder="Ciudad / Lugar" class="field-input-sm" />
            </div>
            <textarea name="diagnosis" rows="2" placeholder="Diagnóstico" class="field-input-sm resize-none">{visit.diagnosis || ''}</textarea>
            <textarea name="treatment" rows="2" placeholder="Tratamiento" class="field-input-sm resize-none">{visit.treatment || ''}</textarea>
            <textarea name="notes" rows="1" placeholder="Notas" class="field-input-sm resize-none">{visit.notes || ''}</textarea>
            <button type="submit" class="w-full rounded-xl bg-accent px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">Guardar cambios</button>
          </form>
        </Card>
      ))}
    </div>
  )}

  <script>
    const toggleBtn = document.getElementById('toggle-historial-form');
    const formBody = document.getElementById('historial-form-body');
    const toggleIcon = document.getElementById('toggle-historial-icon');
    toggleBtn?.addEventListener('click', () => {
      const isOpen = !formBody?.classList.contains('hidden');
      formBody?.classList.toggle('hidden');
      if (toggleIcon) toggleIcon.style.transform = isOpen ? '' : 'rotate(180deg)';
    });
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });
  </script>
</MainLayout>
