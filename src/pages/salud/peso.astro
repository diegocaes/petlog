---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';
import SaludTabs from '../../components/SaludTabs.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import WeightChart from '../../components/WeightChart.tsx';
import { formatDate } from '../../lib/utils';
import { getActivePet } from '../../lib/pet';

const { supabase, user, activePetId } = Astro.locals;
const { pet } = await getActivePet(supabase, user.id, activePetId);
if (!pet) return Astro.redirect('/perfil?new=1');

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;
  if (action === 'add') {
    const weightKg = Number(formData.get('weight_kg'));
    await supabase.from('weight_records').insert({
      pet_id: pet.id,
      weight_kg: weightKg,
      date: formData.get('date') as string,
      notes: (formData.get('notes') as string) || null,
    });
    await supabase.from('pets').update({ weight_kg: weightKg }).eq('id', pet.id);
  }
  if (action === 'delete') {
    await supabase.from('weight_records').delete().eq('id', formData.get('record_id') as string);
    return Astro.redirect('/salud/peso?deleted=1');
  }
  return Astro.redirect('/salud/peso?saved=1');
}

const { data: records } = await supabase
  .from('weight_records')
  .select('*')
  .eq('pet_id', pet.id)
  .order('date', { ascending: true });

// Analytics
const sortedDesc = records ? [...records].reverse() : [];
const latest = sortedDesc[0]?.weight_kg ?? null;
const previous = sortedDesc[1]?.weight_kg ?? null;
const diff = latest && previous ? +(latest - previous).toFixed(1) : null;
const minWeight = records && records.length > 0 ? Math.min(...records.map(r => r.weight_kg)) : null;
const maxWeight = records && records.length > 0 ? Math.max(...records.map(r => r.weight_kg)) : null;
---

<MainLayout title="Control de Peso">
  <SectionHeader title="Salud" subtitle="Control integral de tu mascota" />
  <SaludTabs />

  {/* ── ANALYTICS ── */}
  {records && records.length > 0 ? (
    <div class="mb-5 animate-fade-up">
      {/* Hero + chart */}
      <div class="rounded-2xl mb-3 px-5 py-4" style="background-color: color-mix(in srgb, var(--color-accent) 18%, #0a0f0a);">
        <p class="text-xs font-semibold text-white/40 uppercase tracking-widest mb-1">Peso actual</p>
        <div class="flex items-baseline gap-2 mb-1">
          <p class="text-3xl font-black text-white">{latest}</p>
          <p class="text-base font-medium text-white/50">kg</p>
          {diff !== null && (
            <span class="text-sm font-semibold text-white/60">
              {diff > 0 ? `↑ ${Math.abs(diff)}` : diff < 0 ? `↓ ${Math.abs(diff)}` : '—'} kg
            </span>
          )}
        </div>
        {records.length >= 2 && (
          <WeightChart records={records} client:load />
        )}
      </div>

      {/* Stats row */}
      <div class="grid grid-cols-3 gap-3">
        <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
          <p class="text-lg font-black text-ink">{records.length}</p>
          <p class="text-[10px] text-muted font-medium mt-0.5">registros</p>
        </div>
        <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
          <p class="text-lg font-black text-ink">{minWeight ?? '—'}</p>
          <p class="text-[10px] text-muted font-medium mt-0.5">mínimo kg</p>
        </div>
        <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
          <p class="text-lg font-black text-ink">{maxWeight ?? '—'}</p>
          <p class="text-[10px] text-muted font-medium mt-0.5">máximo kg</p>
        </div>
      </div>
    </div>
  ) : (
    <div class="mb-5 rounded-2xl border border-dashed border-card-border bg-card px-5 py-6 text-center animate-fade-up">
      <p class="text-sm font-semibold text-ink mb-1">Sin registros de peso</p>
      <p class="text-xs text-muted">Registra el primer peso de {pet.name} para empezar a ver su evolución</p>
    </div>
  )}

  {/* ── FORM (colapsable) ── */}
  <div class="mb-5 animate-fade-up animate-fade-up-delay-1">
    <button
      type="button"
      id="toggle-peso-form"
      class="w-full flex items-center justify-between rounded-2xl bg-card border border-card-border px-4 py-3.5 transition-all hover:border-accent/30 active:scale-95"
    >
      <div class="flex items-center gap-2.5">
        <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-sky-50">
          <svg class="h-3.5 w-3.5 text-sky-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12 5v14M5 12h14"/></svg>
        </div>
        <p class="text-sm font-semibold text-ink">Registrar peso</p>
      </div>
      <svg id="toggle-peso-icon" class="h-4 w-4 text-muted transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m6 9 6 6 6-6"/></svg>
    </button>

    <div id="peso-form-body" class="hidden mt-2">
      <Card>
        <form method="POST" class="space-y-4">
          <input type="hidden" name="_action" value="add" />
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-ink mb-1.5">Peso (kg) <span class="text-red-500">*</span></label>
              <input type="number" name="weight_kg" step="0.1" min="0.1" required placeholder="12.5" class="field-input" />
            </div>
            <div>
              <label class="block text-sm font-medium text-ink mb-1.5">Fecha <span class="text-red-500">*</span></label>
              <input type="date" name="date" required value={new Date().toISOString().split('T')[0]} class="field-input" />
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-ink mb-1.5">Notas</label>
            <textarea name="notes" rows="2" placeholder="Después del baño, en ayunas..." class="field-input resize-none"></textarea>
          </div>
          <button type="submit" class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
            Registrar peso
          </button>
        </form>
      </Card>
    </div>
  </div>

  {/* ── HISTORIAL ── */}
  {records && records.length > 0 && (
    <p class="text-xs font-semibold text-muted uppercase tracking-widest mb-3">Historial</p>
  )}

  {(!records || records.length === 0) ? (
    <EmptyState icon="weight" title="Sin registros de peso" description="Registra el primer peso de tu mascota para empezar a ver su evolución" />
  ) : (
    <div class="space-y-3">
      {sortedDesc.map((record, i) => (
        <Card variant="elevated" class:list={['animate-fade-up', i < 5 && `animate-fade-up-delay-${Math.min(i + 1, 5)}`]}>
          <div class="flex items-center justify-between gap-3">
            <div class="flex items-center gap-3 flex-1 min-w-0">
              <div class="shrink-0 rounded-xl bg-amber/10 p-2.5 text-amber-dark">
                <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M8 12a4 4 0 0 1 8 0"/><line x1="12" y1="12" x2="12" y2="8"/></svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-lg font-bold text-ink">{record.weight_kg} <span class="text-sm font-normal text-gray-400">kg</span></p>
                <p class="text-xs text-gray-400">{formatDate(record.date)}</p>
                {record.notes && <p class="text-xs text-gray-400 mt-0.5">{record.notes}</p>}
              </div>
            </div>
            <form method="POST">
              <input type="hidden" name="_action" value="delete" />
              <input type="hidden" name="record_id" value={record.id} />
              <button type="submit" class="shrink-0 rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
              </button>
            </form>
          </div>
        </Card>
      ))}
    </div>
  )}

  <script>
    const toggleBtn = document.getElementById('toggle-peso-form');
    const formBody = document.getElementById('peso-form-body');
    const toggleIcon = document.getElementById('toggle-peso-icon');
    toggleBtn?.addEventListener('click', () => {
      const isOpen = !formBody?.classList.contains('hidden');
      formBody?.classList.toggle('hidden');
      if (toggleIcon) toggleIcon.style.transform = isOpen ? '' : 'rotate(180deg)';
    });
  </script>
</MainLayout>
