---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';
import SaludTabs from '../../components/SaludTabs.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import { formatDate } from '../../lib/utils';
import { getActivePet } from '../../lib/pet';
import { GROOMING_TYPES } from '../../lib/constants';

const { supabase, user, activePetId } = Astro.locals;

const { pet } = await getActivePet(supabase, user.id, activePetId);

if (!pet) return Astro.redirect('/perfil?new=1');

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;

  if (action === 'add') {
    await supabase.from('groomings').insert({
      pet_id: pet.id,
      date: formData.get('date') as string,
      type: formData.get('type') as string,
      groomer_name: (formData.get('groomer_name') as string) || null,
      location: (formData.get('location') as string) || null,
      cost: formData.get('cost') ? Number(formData.get('cost')) : null,
      notes: (formData.get('notes') as string) || null,
    });
  }

  if (action === 'edit') {
    const groomingId = formData.get('grooming_id') as string;
    await supabase.from('groomings').update({
      date: formData.get('date') as string,
      type: formData.get('type') as string,
      groomer_name: (formData.get('groomer_name') as string) || null,
      location: (formData.get('location') as string) || null,
      cost: formData.get('cost') ? Number(formData.get('cost')) : null,
      notes: (formData.get('notes') as string) || null,
    }).eq('id', groomingId);
  }

  if (action === 'delete') {
    const groomingId = formData.get('grooming_id') as string;
    await supabase.from('groomings').delete().eq('id', groomingId);
    return Astro.redirect('/salud/grooming?deleted=1');
  }

  return Astro.redirect('/salud/grooming?saved=1');
}

const { data: groomings } = await supabase
  .from('groomings')
  .select('*')
  .eq('pet_id', pet.id)
  .order('date', { ascending: false });

---

<MainLayout title="Grooming">
  <SectionHeader title="Salud" subtitle="Control integral de tu mascota" />
  <SaludTabs />

  <!-- Add Grooming Form -->
  <Card class="mb-5 animate-fade-up animate-fade-up-delay-2">
    <h2 class="text-xs font-semibold text-muted uppercase tracking-widest mb-4">Registrar grooming</h2>
    <form method="POST" class="space-y-4">
      <input type="hidden" name="_action" value="add" />
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Tipo <span class="text-red-500">*</span></label>
          <select name="type" required class="field-input">
            <option value="bano">Baño</option>
            <option value="corte">Corte de pelo</option>
            <option value="unas">Corte de uñas</option>
            <option value="oidos">Limpieza de oídos</option>
            <option value="dientes">Limpieza dental</option>
            <option value="completo">Grooming completo</option>
            <option value="otro">Otro</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Fecha <span class="text-red-500">*</span></label>
          <input type="date" name="date" required value={new Date().toISOString().split('T')[0]} class="field-input" />
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Groomer / Peluquero</label>
          <input type="text" name="groomer_name" placeholder="Nombre del groomer" class="field-input" />
        </div>
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Ciudad / Lugar</label>
          <input type="text" name="location" placeholder="Ej: Pet Spa, Madrid" class="field-input" />
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Costo</label>
          <input type="number" name="cost" step="0.01" placeholder="0.00" class="field-input" />
        </div>
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Notas</label>
          <input type="text" name="notes" placeholder="Observaciones..." class="field-input" />
        </div>
      </div>
      <button type="submit" class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
        Registrar grooming
      </button>
    </form>
  </Card>

  <!-- Grooming List -->
  {(!groomings || groomings.length === 0) ? (
    <EmptyState
      icon="grooming"
      title="Sin grooming registrado"
      description="Registra la primera sesión de grooming de tu mascota"
    />
  ) : (
    <div class="space-y-3">
      {groomings.map((g, i) => (
        <Card variant="elevated" class:list={['animate-fade-up', i < 5 && `animate-fade-up-delay-${Math.min(i + 1, 5)}`]}>
          {/* View */}
          <div class="item-view" data-id={g.id}>
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-start gap-3 flex-1 min-w-0">
                <div class="shrink-0 rounded-xl bg-pink-50 p-2.5 text-pink-500">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"/><path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-0.5">
                    <p class="font-semibold text-ink">{GROOMING_TYPES[g.type] || g.type}</p>
                    {g.cost && (
                      <span class="shrink-0 rounded-full bg-pink-50 px-2 py-0.5 text-xs font-medium text-pink-600">
                        ${g.cost}
                      </span>
                    )}
                  </div>
                  <p class="text-xs text-gray-400">
                    {formatDate(g.date)}
                    {g.groomer_name && ` · ${g.groomer_name}`}
                    {g.location && ` · ${g.location}`}
                  </p>
                  {g.notes && <p class="text-xs text-gray-400 mt-1">{g.notes}</p>}
                </div>
              </div>
              <div class="flex gap-1 shrink-0">
                <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-accent/10 hover:text-accent" data-id={g.id} title="Editar">
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                </button>
                <form method="POST">
                  <input type="hidden" name="_action" value="delete" />
                  <input type="hidden" name="grooming_id" value={g.id} />
                  <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                  </button>
                </form>
              </div>
            </div>
          </div>

          {/* Edit */}
          <form method="POST" class="item-edit hidden space-y-3" data-id={g.id}>
            <input type="hidden" name="_action" value="edit" />
            <input type="hidden" name="grooming_id" value={g.id} />
            <div class="flex items-center justify-between mb-2">
              <p class="text-xs font-semibold text-accent uppercase tracking-wider">Editando</p>
              <button type="button" class="cancel-edit text-xs text-gray-400 hover:text-gray-600" data-id={g.id}>Cancelar</button>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <select name="type" required class="field-input-sm">
                {Object.entries(GROOMING_TYPES).map(([val, label]) => (
                  <option value={val} selected={g.type === val}>{label}</option>
                ))}
              </select>
              <input type="date" name="date" value={g.date} required class="field-input-sm" />
            </div>
            <div class="grid grid-cols-2 gap-3">
              <input type="text" name="groomer_name" value={g.groomer_name || ''} placeholder="Groomer" class="field-input-sm" />
              <input type="text" name="location" value={g.location || ''} placeholder="Ciudad / Lugar" class="field-input-sm" />
            </div>
            <div class="grid grid-cols-2 gap-3">
              <input type="number" name="cost" step="0.01" value={g.cost || ''} placeholder="Costo" class="field-input-sm" />
              <input type="text" name="notes" value={g.notes || ''} placeholder="Notas" class="field-input-sm" />
            </div>
            <button type="submit" class="w-full rounded-xl bg-accent px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
              Guardar cambios
            </button>
          </form>
        </Card>
      ))}
    </div>
  )}

  <script>
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });
  </script>
</MainLayout>
