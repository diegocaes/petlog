---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';
import SaludTabs from '../../components/SaludTabs.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import { formatDate } from '../../lib/utils';

const { supabase, user } = Astro.locals;

const { data: pet } = await supabase
  .from('pets')
  .select('id')
  .eq('user_id', user.id)
  .single();

if (!pet) return Astro.redirect('/perfil?new=1');

// Handle form submission
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;

  if (action === 'add') {
    await supabase.from('vaccines').insert({
      pet_id: pet.id,
      name: formData.get('name') as string,
      date_given: formData.get('date_given') as string,
      next_due: (formData.get('next_due') as string) || null,
      vet_name: (formData.get('vet_name') as string) || null,
      notes: (formData.get('notes') as string) || null,
    });
  }

  if (action === 'edit') {
    const vaccineId = formData.get('vaccine_id') as string;
    await supabase.from('vaccines').update({
      name: formData.get('name') as string,
      date_given: formData.get('date_given') as string,
      next_due: (formData.get('next_due') as string) || null,
      vet_name: (formData.get('vet_name') as string) || null,
      notes: (formData.get('notes') as string) || null,
    }).eq('id', vaccineId);
  }

  if (action === 'delete') {
    const vaccineId = formData.get('vaccine_id') as string;
    await supabase.from('vaccines').delete().eq('id', vaccineId);
  }

  return Astro.redirect('/salud/vacunas');
}

const { data: vaccines } = await supabase
  .from('vaccines')
  .select('*')
  .eq('pet_id', pet.id)
  .order('date_given', { ascending: false });
---

<MainLayout title="Vacunas">
  <SectionHeader title="Salud" subtitle="Control integral de tu mascota" />
  <SaludTabs />

  <!-- Add Vaccine Form -->
  <Card class="mb-5 animate-fade-up animate-fade-up-delay-2">
    <h2 class="text-xs font-semibold text-gray-400 uppercase tracking-widest mb-4">Registrar vacuna</h2>
    <form method="POST" class="space-y-4">
      <input type="hidden" name="_action" value="add" />
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Vacuna <span class="text-coral">*</span></label>
        <input type="text" name="name" required placeholder="Ej: Rabia, Parvovirus..." class="w-full rounded-xl border border-cream-dark bg-white px-4 py-3 text-gray-800 placeholder-gray-400 transition-all duration-200 hover:border-gray-300 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1.5">Fecha aplicada <span class="text-coral">*</span></label>
          <input type="date" name="date_given" required class="w-full rounded-xl border border-cream-dark bg-white px-4 py-3 text-gray-800 transition-all duration-200 hover:border-gray-300 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1.5">Próx. dosis <span class="text-xs text-gray-400">(si aplica)</span></label>
          <input type="date" name="next_due" class="w-full rounded-xl border border-cream-dark bg-white px-4 py-3 text-gray-800 transition-all duration-200 hover:border-gray-300 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Veterinario</label>
        <input type="text" name="vet_name" placeholder="Dr. García" class="w-full rounded-xl border border-cream-dark bg-white px-4 py-3 text-gray-800 placeholder-gray-400 transition-all duration-200 hover:border-gray-300 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Notas</label>
        <textarea name="notes" rows="2" placeholder="Observaciones..." class="w-full rounded-xl border border-cream-dark bg-white px-4 py-3 text-gray-800 placeholder-gray-400 transition-all duration-200 hover:border-gray-300 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20 resize-none"></textarea>
      </div>
      <button type="submit" class="w-full rounded-2xl bg-forest px-6 py-3.5 font-semibold text-white shadow-md transition-all hover:bg-forest-light active:scale-95">
        Registrar vacuna
      </button>
    </form>
  </Card>

  <!-- Vaccine List -->
  {(!vaccines || vaccines.length === 0) ? (
    <EmptyState
      icon="vaccine"
      title="Sin vacunas registradas"
      description="Registra la primera vacuna de tu mascota"
    />
  ) : (
    <div class="space-y-3 animate-fade-up animate-fade-up-delay-3">
      {vaccines.map((vaccine) => {
        const overdue = vaccine.next_due && new Date(vaccine.next_due + 'T00:00:00') < new Date();
        const daysLeft = vaccine.next_due
          ? Math.ceil((new Date(vaccine.next_due + 'T00:00:00').getTime() - new Date().getTime()) / (1000 * 60 * 60 * 24))
          : null;

        return (
          <Card variant="elevated" class:list={[overdue && 'border-red-200 !bg-red-50/30']}>
            {/* View mode */}
            <div class="vaccine-view" data-id={vaccine.id}>
              <div class="flex items-start justify-between gap-3">
                <div class="flex items-start gap-3 flex-1 min-w-0">
                  <div class:list={['shrink-0 rounded-xl p-2.5', overdue ? 'bg-red-100 text-red-500' : 'bg-green-50 text-forest']}>
                    <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m14.5 2-8.5 8.5v4h4l8.5-8.5a2.83 2.83 0 0 0-4-4z"/><path d="m18 2 4 4"/></svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="font-semibold text-gray-800">{vaccine.name}</p>
                    <p class="text-xs text-gray-400 mt-0.5">
                      Aplicada: {formatDate(vaccine.date_given)}
                      {vaccine.vet_name && ` · ${vaccine.vet_name}`}
                    </p>
                    {vaccine.next_due ? (
                      <div class:list={['mt-2 flex items-center gap-1.5 text-xs font-medium',
                        overdue ? 'text-red-500' : daysLeft !== null && daysLeft <= 30 ? 'text-amber-600' : 'text-forest'
                      ]}>
                        <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          {overdue
                            ? <><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></>
                            : <><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></>
                          }
                        </svg>
                        <span>
                          {overdue
                            ? `Vencida hace ${Math.abs(daysLeft!)} días`
                            : `Próxima: ${formatDate(vaccine.next_due)} (${daysLeft} días)`
                          }
                        </span>
                      </div>
                    ) : (
                      <p class="mt-1.5 text-xs text-gray-400 italic">Dosis única</p>
                    )}
                    {vaccine.notes && <p class="text-xs text-gray-400 mt-1">{vaccine.notes}</p>}
                  </div>
                </div>
                <div class="flex gap-1 shrink-0">
                  <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-forest/10 hover:text-forest" data-id={vaccine.id} title="Editar">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                  </button>
                  <form method="POST">
                    <input type="hidden" name="_action" value="delete" />
                    <input type="hidden" name="vaccine_id" value={vaccine.id} />
                    <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-coral" title="Eliminar">
                      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                    </button>
                  </form>
                </div>
              </div>
            </div>

            {/* Edit mode (hidden by default) */}
            <form method="POST" class="vaccine-edit hidden space-y-3" data-id={vaccine.id}>
              <input type="hidden" name="_action" value="edit" />
              <input type="hidden" name="vaccine_id" value={vaccine.id} />
              <div class="flex items-center justify-between mb-2">
                <p class="text-xs font-semibold text-forest uppercase tracking-wider">Editando</p>
                <button type="button" class="cancel-edit text-xs text-gray-400 hover:text-gray-600" data-id={vaccine.id}>Cancelar</button>
              </div>
              <input type="text" name="name" value={vaccine.name} required class="w-full rounded-xl border border-cream-dark bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
              <div class="grid grid-cols-2 gap-3">
                <input type="date" name="date_given" value={vaccine.date_given} required class="w-full rounded-xl border border-cream-dark bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
                <input type="date" name="next_due" value={vaccine.next_due || ''} placeholder="Próx. dosis" class="w-full rounded-xl border border-cream-dark bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
              </div>
              <input type="text" name="vet_name" value={vaccine.vet_name || ''} placeholder="Veterinario" class="w-full rounded-xl border border-cream-dark bg-white px-3 py-2.5 text-sm text-gray-800 placeholder-gray-400 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20" />
              <textarea name="notes" rows="2" placeholder="Notas" class="w-full rounded-xl border border-cream-dark bg-white px-3 py-2.5 text-sm text-gray-800 placeholder-gray-400 focus:border-forest focus:outline-none focus:ring-2 focus:ring-forest/20 resize-none">{vaccine.notes || ''}</textarea>
              <button type="submit" class="w-full rounded-xl bg-forest px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-forest-light active:scale-95">
                Guardar cambios
              </button>
            </form>
          </Card>
        );
      })}
    </div>
  )}

  <script>
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.vaccine-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.vaccine-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.vaccine-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.vaccine-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });
  </script>
</MainLayout>
