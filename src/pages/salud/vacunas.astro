---
import MainLayout from '../../layouts/MainLayout.astro';
import Card from '../../components/ui/Card.astro';
import SectionHeader from '../../components/ui/SectionHeader.astro';
import SaludTabs from '../../components/SaludTabs.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import { formatDate } from '../../lib/utils';
import { getVaccineBadge } from '../../lib/vaccine-badges';

const { supabase, user } = Astro.locals;

const { data: pet } = await supabase
  .from('pets')
  .select('id')
  .eq('user_id', user.id)
  .single();

if (!pet) return Astro.redirect('/perfil?new=1');

// Handle form submission
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;

  if (action === 'add') {
    await supabase.from('vaccines').insert({
      pet_id: pet.id,
      name: formData.get('name') as string,
      date_given: formData.get('date_given') as string,
      next_due: (formData.get('next_due') as string) || null,
      vet_name: (formData.get('vet_name') as string) || null,
      notes: (formData.get('notes') as string) || null,
    });
  }

  if (action === 'edit') {
    const vaccineId = formData.get('vaccine_id') as string;
    await supabase.from('vaccines').update({
      name: formData.get('name') as string,
      date_given: formData.get('date_given') as string,
      next_due: (formData.get('next_due') as string) || null,
      vet_name: (formData.get('vet_name') as string) || null,
      notes: (formData.get('notes') as string) || null,
    }).eq('id', vaccineId);
  }

  if (action === 'delete') {
    const vaccineId = formData.get('vaccine_id') as string;
    await supabase.from('vaccines').delete().eq('id', vaccineId);
    return Astro.redirect('/salud/vacunas?deleted=1');
  }

  return Astro.redirect('/salud/vacunas?saved=1');
}

const { data: vaccines } = await supabase
  .from('vaccines')
  .select('*')
  .eq('pet_id', pet.id)
  .order('date_given', { ascending: false });

// Badge gallery: count duplicates and deduplicate by name
const countMap: Record<string, number> = {};
vaccines?.forEach(v => {
  const k = v.name.toLowerCase();
  countMap[k] = (countMap[k] || 0) + 1;
});
const badgeList = [...new Map(vaccines?.map(v => [v.name.toLowerCase(), v]) ?? []).values()];
---

<MainLayout title="Vacunas">
  <SectionHeader title="Salud" subtitle="Control integral de tu mascota" />
  <SaludTabs />

  <!-- Badge Gallery -->
  {badgeList.length > 0 && (
    <div class="flex flex-wrap gap-4 mb-5 animate-fade-up">
      {badgeList.map(v => {
        const { src, label } = getVaccineBadge(v.name);
        const count = countMap[v.name.toLowerCase()] ?? 1;
        return (
          <div class="flex flex-col items-center gap-1.5 relative">
            <div class="relative">
              {src ? (
                <img src={src} alt={label} class="h-16 w-16 object-contain drop-shadow-sm" />
              ) : (
                <div class="h-16 w-16 rounded-2xl bg-accent/10 flex items-center justify-center">
                  <svg class="h-7 w-7 text-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m14.5 2-8.5 8.5v4h4l8.5-8.5a2.83 2.83 0 0 0-4-4z"/><path d="m18 2 4 4"/></svg>
                </div>
              )}
              {count > 1 && (
                <span class="absolute -bottom-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-accent text-[10px] font-black text-white ring-2 ring-canvas">
                  ×{count}
                </span>
              )}
            </div>
            <p class="text-[10px] font-medium text-muted text-center leading-tight max-w-16 truncate">{label}</p>
          </div>
        );
      })}
    </div>
  )}

  <!-- Add Vaccine Form -->
  <Card class="mb-5 animate-fade-up animate-fade-up-delay-2">
    <h2 class="text-xs font-semibold text-muted uppercase tracking-widest mb-4">Registrar vacuna</h2>
    <form method="POST" class="space-y-4">
      <input type="hidden" name="_action" value="add" />
      <div>
        <label class="block text-sm font-medium text-ink mb-1.5">Vacuna <span class="text-red-500">*</span></label>
        <select
          id="vaccine-select"
          class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
        >
          <option value="">Seleccionar vacuna</option>
          <option value="Rabia">Rabia</option>
          <option value="Parvovirus">Parvovirus</option>
          <option value="Moquillo">Moquillo</option>
          <option value="Bordetella">Bordetella</option>
          <option value="Leptospirosis">Leptospirosis</option>
          <option value="Hepatitis">Hepatitis</option>
          <option value="Otra">Otra...</option>
        </select>
        <input
          type="text"
          name="name"
          id="vaccine-name-input"
          required
          placeholder="Nombre de la vacuna"
          class="mt-2 hidden w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 placeholder-gray-400 transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
        />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Fecha aplicada <span class="text-red-500">*</span></label>
          <input type="date" name="date_given" required class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
        </div>
        <div>
          <label class="block text-sm font-medium text-ink mb-1.5">Próx. dosis <span class="text-xs text-gray-400">(si aplica)</span></label>
          <input type="date" name="next_due" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-ink mb-1.5">Veterinario</label>
        <input type="text" name="vet_name" placeholder="Dr. García" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 placeholder-gray-400 transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
      </div>
      <div>
        <label class="block text-sm font-medium text-ink mb-1.5">Notas</label>
        <textarea name="notes" rows="2" placeholder="Observaciones..." class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 placeholder-gray-400 transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20 resize-none"></textarea>
      </div>
      <button type="submit" class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
        Registrar vacuna
      </button>
    </form>
  </Card>

  <!-- Vaccine List -->
  {(!vaccines || vaccines.length === 0) ? (
    <EmptyState
      icon="vaccine"
      title="Sin vacunas registradas"
      description="Registra la primera vacuna de tu mascota"
    />
  ) : (
    <div class="space-y-3 animate-fade-up animate-fade-up-delay-3">
      {vaccines.map((vaccine, i) => {
        const overdue = vaccine.next_due && new Date(vaccine.next_due + 'T00:00:00') < new Date();
        const daysLeft = vaccine.next_due
          ? Math.ceil((new Date(vaccine.next_due + 'T00:00:00').getTime() - new Date().getTime()) / (1000 * 60 * 60 * 24))
          : null;

        return (
          <Card variant="elevated" class:list={[overdue && 'border-red-200 !bg-red-50/30', i >= 5 && 'collapse-item hidden']}>
            {/* View mode */}
            <div class="vaccine-view" data-id={vaccine.id}>
              <div class="flex items-start justify-between gap-3">
                <div class="flex items-start gap-3 flex-1 min-w-0">
                  <div class:list={['shrink-0 rounded-xl p-2.5', overdue ? 'bg-red-100 text-red-500' : 'bg-green-50 text-accent']}>
                    <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m14.5 2-8.5 8.5v4h4l8.5-8.5a2.83 2.83 0 0 0-4-4z"/><path d="m18 2 4 4"/></svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="font-semibold text-gray-800">{vaccine.name}</p>
                    <p class="text-xs text-gray-400 mt-0.5">
                      Aplicada: {formatDate(vaccine.date_given)}
                      {vaccine.vet_name && ` · ${vaccine.vet_name}`}
                    </p>
                    {vaccine.next_due ? (
                      <div class:list={['mt-2 flex items-center gap-1.5 text-xs font-medium',
                        overdue ? 'text-red-500' : daysLeft !== null && daysLeft <= 30 ? 'text-amber-600' : 'text-accent'
                      ]}>
                        <svg class="h-3 w-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          {overdue
                            ? <><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></>
                            : <><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></>
                          }
                        </svg>
                        <span>
                          {overdue
                            ? `Vencida hace ${Math.abs(daysLeft!)} días`
                            : `Próxima: ${formatDate(vaccine.next_due)} (${daysLeft} días)`
                          }
                        </span>
                      </div>
                    ) : (
                      <p class="mt-1.5 text-xs text-gray-400 italic">Dosis única</p>
                    )}
                    {vaccine.notes && <p class="text-xs text-gray-400 mt-1">{vaccine.notes}</p>}
                  </div>
                </div>
                <div class="flex gap-1 shrink-0">
                  <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-accent/10 hover:text-accent" data-id={vaccine.id} title="Editar">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                  </button>
                  <form method="POST">
                    <input type="hidden" name="_action" value="delete" />
                    <input type="hidden" name="vaccine_id" value={vaccine.id} />
                    <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                    </button>
                  </form>
                </div>
              </div>
            </div>

            {/* Edit mode (hidden by default) */}
            <form method="POST" class="vaccine-edit hidden space-y-3" data-id={vaccine.id}>
              <input type="hidden" name="_action" value="edit" />
              <input type="hidden" name="vaccine_id" value={vaccine.id} />
              <div class="flex items-center justify-between mb-2">
                <p class="text-xs font-semibold text-accent uppercase tracking-wider">Editando</p>
                <button type="button" class="cancel-edit text-xs text-gray-400 hover:text-gray-600" data-id={vaccine.id}>Cancelar</button>
              </div>
              <input type="text" name="name" value={vaccine.name} required class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
              <div class="grid grid-cols-2 gap-3">
                <input type="date" name="date_given" value={vaccine.date_given} required class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
                <input type="date" name="next_due" value={vaccine.next_due || ''} placeholder="Próx. dosis" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
              </div>
              <input type="text" name="vet_name" value={vaccine.vet_name || ''} placeholder="Veterinario" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
              <textarea name="notes" rows="2" placeholder="Notas" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20 resize-none">{vaccine.notes || ''}</textarea>
              <button type="submit" class="w-full rounded-xl bg-accent px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
                Guardar cambios
              </button>
            </form>
          </Card>
        );
      })}
    </div>
  )}

  {vaccines && vaccines.length > 5 && (
    <button
      id="show-more-btn"
      type="button"
      class="mt-3 w-full rounded-xl border border-card-border py-3 text-sm font-medium text-muted transition-all hover:bg-canvas hover:text-ink active:scale-95"
    >
      Ver {vaccines.length - 5} vacuna{vaccines.length - 5 !== 1 ? 's' : ''} más
    </button>
  )}

  <script>
    // Vaccine select → name input sync
    const vaccineSelect = document.getElementById('vaccine-select') as HTMLSelectElement;
    const vaccineNameInput = document.getElementById('vaccine-name-input') as HTMLInputElement;

    vaccineSelect?.addEventListener('change', () => {
      const val = vaccineSelect.value;
      if (val === 'Otra') {
        vaccineNameInput.classList.remove('hidden');
        vaccineNameInput.value = '';
        vaccineNameInput.focus();
      } else {
        vaccineNameInput.classList.add('hidden');
        vaccineNameInput.value = val;
      }
    });

    // On form submit, ensure name is set from select if not "Otra"
    vaccineSelect?.closest('form')?.addEventListener('submit', () => {
      if (vaccineSelect.value && vaccineSelect.value !== 'Otra') {
        vaccineNameInput.value = vaccineSelect.value;
        vaccineNameInput.classList.remove('hidden'); // must be in DOM to submit
      }
    });

    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.vaccine-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.vaccine-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.vaccine-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.vaccine-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });

    const showMoreBtn = document.getElementById('show-more-btn');
    if (showMoreBtn) {
      showMoreBtn.addEventListener('click', () => {
        document.querySelectorAll('.collapse-item').forEach(el => el.classList.remove('hidden'));
        showMoreBtn.remove();
      });
    }
  </script>
</MainLayout>
