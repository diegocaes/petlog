---
import '../styles/global.css';
import { createSupabaseClient } from '../lib/supabase';

const supabase = createSupabaseClient(Astro.request, Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

if (user) {
  return Astro.redirect('/dashboard');
}

let sent = false;
let errorMsg = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const email = (formData.get('email') as string)?.trim();

  if (email) {
    const origin = new URL(Astro.request.url).origin;
    const { error } = await supabase.auth.resetPasswordForEmail(email, {
      redirectTo: `${origin}/api/auth/callback?next=update-password`,
    });
    // Always show success to avoid user enumeration
    if (!error) {
      sent = true;
    } else {
      // Only show error for non-email-not-found cases
      errorMsg = 'No se pudo enviar el correo. Intenta de nuevo.';
    }
  }
  // If no error or email not found, show success either way
  if (!errorMsg) sent = true;
}
