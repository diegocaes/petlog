---
import MainLayout from '../layouts/MainLayout.astro';
import Card from '../components/ui/Card.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import EmptyState from '../components/ui/EmptyState.astro';
import { formatDate } from '../lib/utils';
import { getActivePet } from '../lib/pet';
import { FOOD_TYPES } from '../lib/constants';

const { supabase, user, activePetId } = Astro.locals;

const { pet } = await getActivePet(supabase, user.id, activePetId);

if (!pet) return Astro.redirect('/perfil?new=1');

function bagToGrams(size: number, unit: string): number {
  if (unit === 'kg') return size * 1000;
  if (unit === 'lb') return size * 453.592;
  return size;
}

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;

  const fields = {
    brand:       formData.get('brand') as string,
    type:        formData.get('type') as string,
    daily_grams: formData.get('daily_grams') ? Number(formData.get('daily_grams')) : null,
    frequency:   (formData.get('frequency') as string) || null,
    bag_size:    formData.get('bag_size') ? Number(formData.get('bag_size')) : null,
    bag_unit:    (formData.get('bag_unit') as string) || 'kg',
    price:       formData.get('price') ? Number(formData.get('price')) : null,
    start_date:  (formData.get('start_date') as string) || null,
    notes:       (formData.get('notes') as string) || null,
    amount_grams: formData.get('daily_grams') ? Number(formData.get('daily_grams')) : null,
  };

  if (action === 'add') {
    await supabase.from('foods').insert({ pet_id: pet.id, ...fields });
  }

  if (action === 'edit') {
    const foodId = formData.get('food_id') as string;
    await supabase.from('foods').update(fields).eq('id', foodId);
  }

  if (action === 'delete') {
    const foodId = formData.get('food_id') as string;
    await supabase.from('foods').delete().eq('id', foodId);
    return Astro.redirect('/alimentacion?deleted=1');
  }

  return Astro.redirect('/alimentacion?saved=1');
}

const { data: rawFoods } = await supabase
  .from('foods')
  .select('*')
  .eq('pet_id', pet.id)
  .order('created_at', { ascending: false });

const foods = (rawFoods ?? []).map(food => {
  const totalGrams = food.bag_size ? bagToGrams(food.bag_size, food.bag_unit ?? 'kg') : null;
  const daysTotal  = (totalGrams && food.daily_grams) ? Math.floor(totalGrams / food.daily_grams) : null;
  const costPerDay = (food.price && daysTotal && daysTotal > 0)
    ? (food.price / daysTotal).toFixed(2) : null;
  return { ...food, totalGrams, daysTotal, costPerDay };
});

// Analytics
const currentFood = foods[0] ?? null;
const avgDaysPerBag = foods.filter(f => f.daysTotal).length > 0
  ? Math.round(foods.filter(f => f.daysTotal).reduce((s, f) => s + f.daysTotal!, 0) / foods.filter(f => f.daysTotal).length)
  : null;
---

<MainLayout title="Alimentación">
  <SectionHeader title="Alimentación" subtitle={`Dieta y control de comida de ${pet.name}`} />

  {/* ── ANALYTICS ── */}
  {currentFood ? (
    <div class="mb-5 animate-fade-up">
      {/* Hero stat */}
      <div class="rounded-2xl mb-3 px-5 py-4" style="background-color: color-mix(in srgb, var(--color-accent) 18%, #0a0f0a);">
        <p class="text-xs font-semibold text-white/40 uppercase tracking-widest mb-1">Alimento actual</p>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xl font-bold text-white">{currentFood.brand}</p>
            <p class="text-sm text-white/50">{FOOD_TYPES[currentFood.type] || currentFood.type}{currentFood.daily_grams ? ` · ${currentFood.daily_grams}g/día` : ''}</p>
          </div>
          {currentFood.daysTotal && (
            <div class="text-right">
              <p class="text-2xl font-black text-white">≈{currentFood.daysTotal}</p>
              <p class="text-xs text-white/50">días/bolsa</p>
            </div>
          )}
        </div>
        {currentFood.daysTotal && (
          <div class="mt-3 h-1 w-full rounded-full bg-white/10 overflow-hidden">
            <div class="h-full rounded-full bg-white/40" style="width: 100%"></div>
          </div>
        )}
      </div>

      {/* Stats row */}
      {(currentFood.costPerDay || avgDaysPerBag || foods.length > 1) && (
        <div class="grid grid-cols-3 gap-3">
          <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
            <p class="text-lg font-black text-ink">{currentFood.costPerDay ? `$${currentFood.costPerDay}` : '—'}</p>
            <p class="text-[10px] text-muted font-medium mt-0.5">costo/día</p>
          </div>
          <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
            <p class="text-lg font-black text-ink">{avgDaysPerBag ?? '—'}</p>
            <p class="text-[10px] text-muted font-medium mt-0.5">días/bolsa prom.</p>
          </div>
          <div class="rounded-2xl bg-card border border-card-border px-4 py-3 text-center">
            <p class="text-lg font-black text-ink">{foods.length}</p>
            <p class="text-[10px] text-muted font-medium mt-0.5">alimentos</p>
          </div>
        </div>
      )}
    </div>
  ) : (
    <div class="mb-5 rounded-2xl border border-dashed border-card-border bg-card px-5 py-6 text-center animate-fade-up">
      <p class="text-sm font-semibold text-ink mb-1">Sin alimento registrado</p>
      <p class="text-xs text-muted">Agrega el alimento actual de {pet.name} para ver los análisis</p>
    </div>
  )}

  {/* ── FORM (colapsable) ── */}
  <div class="mb-5 animate-fade-up animate-fade-up-delay-1">
    <button
      type="button"
      id="toggle-food-form"
      class="w-full flex items-center justify-between rounded-2xl bg-card border border-card-border px-4 py-3.5 transition-all hover:border-accent/30 active:scale-95"
    >
      <div class="flex items-center gap-2.5">
        <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-accent/10">
          <svg class="h-3.5 w-3.5 text-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12 5v14M5 12h14"/></svg>
        </div>
        <p class="text-sm font-semibold text-ink">Registrar alimento</p>
      </div>
      <svg id="toggle-food-icon" class="h-4 w-4 text-muted transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m6 9 6 6 6-6"/></svg>
    </button>

    <div id="food-form-body" class="hidden mt-2">
      <Card>
        <form method="POST" class="space-y-4">
          <input type="hidden" name="_action" value="add" />
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-ink mb-1">Marca <span class="text-red-500">*</span></label>
              <input type="text" name="brand" required placeholder="Ej: Royal Canin" class="field-input" />
            </div>
            <div>
              <label class="block text-sm font-medium text-ink mb-1">Tipo <span class="text-red-500">*</span></label>
              <select name="type" required class="field-input">
                {Object.entries(FOOD_TYPES).map(([val, label]) => (
                  <option value={val}>{label}</option>
                ))}
              </select>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-ink mb-1">Ración diaria (g)</label>
              <input type="number" name="daily_grams" placeholder="Ej: 200" min="1" class="field-input" />
            </div>
            <div>
              <label class="block text-sm font-medium text-ink mb-1">Frecuencia</label>
              <select name="frequency" class="field-input">
                <option value="">— Sin especificar</option>
                <option value="1x">1 vez al día</option>
                <option value="2x">2 veces al día</option>
                <option value="3x">3 veces al día</option>
                <option value="libre">Libre acceso</option>
              </select>
            </div>
          </div>
          <div class="grid grid-cols-3 gap-3">
            <div class="col-span-1">
              <label class="block text-sm font-medium text-ink mb-1">Tamaño bolsa</label>
              <input type="number" name="bag_size" placeholder="Ej: 10" min="0" step="0.1" class="field-input" />
            </div>
            <div class="col-span-1">
              <label class="block text-sm font-medium text-ink mb-1">Unidad</label>
              <select name="bag_unit" class="field-input">
                <option value="kg">kg</option>
                <option value="g">g</option>
                <option value="lb">lb</option>
              </select>
            </div>
            <div class="col-span-1">
              <label class="block text-sm font-medium text-ink mb-1">Precio ($)</label>
              <input type="number" name="price" placeholder="Ej: 45.00" min="0" step="0.01" class="field-input" />
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-ink mb-1">Fecha de inicio</label>
              <input type="date" name="start_date" class="field-input" />
            </div>
            <div>
              <label class="block text-sm font-medium text-ink mb-1">Notas</label>
              <input type="text" name="notes" placeholder="Alergias, marca anterior..." class="field-input" />
            </div>
          </div>
          <button type="submit" class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
            Registrar alimento
          </button>
        </form>
      </Card>
    </div>
  </div>

  {/* ── HISTORIAL ── */}
  {foods.length > 0 && (
    <div class="mb-1">
      <p class="text-xs font-semibold text-muted uppercase tracking-widest mb-3">Historial de alimentos</p>
    </div>
  )}

  {foods.length === 0 ? (
    <EmptyState
      icon="food"
      title="Sin alimentos registrados"
      description={`Registra qué come ${pet.name} para hacer seguimiento de su dieta`}
    />
  ) : (
    <div class="space-y-3">
      {foods.map((food, i) => (
        <Card variant="elevated" class:list={['animate-fade-up', i < 5 && `animate-fade-up-delay-${Math.min(i + 1, 5)}`]}>

          {/* ── VIEW ── */}
          <div class="item-view" data-id={food.id}>
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-start gap-3 flex-1 min-w-0">
                <div class="shrink-0 rounded-xl bg-amber/10 p-2.5 text-amber-dark">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 flex-wrap">
                    <p class="font-semibold text-ink">{food.brand}</p>
                    <span class="rounded-full bg-canvas px-2 py-0.5 text-xs font-medium text-muted">
                      {FOOD_TYPES[food.type] || food.type}
                    </span>
                  </div>
                  {food.daysTotal && (
                    <div class="mt-2.5 mb-2">
                      <div class="flex items-baseline gap-1.5 mb-1">
                        <span class="text-xl font-bold text-ink">≈ {food.daysTotal}</span>
                        <span class="text-sm text-muted">días por bolsa</span>
                      </div>
                      <div class="h-1.5 w-full rounded-full bg-canvas overflow-hidden">
                        <div class="h-full rounded-full bg-accent" style="width: 100%"></div>
                      </div>
                    </div>
                  )}
                  <div class="flex flex-wrap gap-x-3 gap-y-0.5 mt-1.5">
                    {food.daily_grams && <span class="text-xs text-muted">{food.daily_grams}g/día</span>}
                    {food.bag_size && <span class="text-xs text-muted">{food.bag_size} {food.bag_unit ?? 'kg'}</span>}
                    {food.costPerDay && <span class="text-xs font-semibold text-accent">${food.costPerDay}/día</span>}
                    {food.price && <span class="text-xs text-muted">${food.price} bolsa</span>}
                    {food.frequency && (
                      <span class="text-xs text-muted">{food.frequency === '1x' ? '1x/día' : food.frequency === '2x' ? '2x/día' : food.frequency === '3x' ? '3x/día' : 'Libre acceso'}</span>
                    )}
                  </div>
                  {food.start_date && <p class="text-xs text-muted mt-1">Desde {formatDate(food.start_date)}</p>}
                  {food.notes && <p class="text-xs text-muted mt-1 italic">{food.notes}</p>}
                </div>
              </div>
              <div class="flex gap-1 shrink-0">
                <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-accent/10 hover:text-accent" data-id={food.id} title="Editar">
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                </button>
                <form method="POST">
                  <input type="hidden" name="_action" value="delete" />
                  <input type="hidden" name="food_id" value={food.id} />
                  <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                  </button>
                </form>
              </div>
            </div>
          </div>

          {/* ── EDIT ── */}
          <form method="POST" class="item-edit hidden space-y-3" data-id={food.id}>
            <input type="hidden" name="_action" value="edit" />
            <input type="hidden" name="food_id" value={food.id} />
            <div class="flex items-center justify-between mb-2">
              <p class="text-xs font-semibold text-accent uppercase tracking-wider">Editando</p>
              <button type="button" class="cancel-edit text-xs text-muted hover:text-ink" data-id={food.id}>Cancelar</button>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <input type="text" name="brand" value={food.brand} required placeholder="Marca" class="field-input-sm" />
              <select name="type" required class="field-input-sm">
                {Object.entries(FOOD_TYPES).map(([val, label]) => (
                  <option value={val} selected={food.type === val}>{label}</option>
                ))}
              </select>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <input type="number" name="daily_grams" value={food.daily_grams || ''} placeholder="Ración/día (g)" min="1" class="field-input-sm" />
              <select name="frequency" class="field-input-sm">
                <option value="">Frecuencia</option>
                <option value="1x" selected={food.frequency === '1x'}>1x/día</option>
                <option value="2x" selected={food.frequency === '2x'}>2x/día</option>
                <option value="3x" selected={food.frequency === '3x'}>3x/día</option>
                <option value="libre" selected={food.frequency === 'libre'}>Libre</option>
              </select>
            </div>
            <div class="grid grid-cols-3 gap-2">
              <input type="number" name="bag_size" value={food.bag_size || ''} placeholder="Bolsa" step="0.1" class="field-input-sm" />
              <select name="bag_unit" class="field-input-sm">
                <option value="kg" selected={food.bag_unit === 'kg'}>kg</option>
                <option value="g" selected={food.bag_unit === 'g'}>g</option>
                <option value="lb" selected={food.bag_unit === 'lb'}>lb</option>
              </select>
              <input type="number" name="price" value={food.price || ''} placeholder="Precio $" step="0.01" class="field-input-sm" />
            </div>
            <div class="grid grid-cols-2 gap-3">
              <input type="date" name="start_date" value={food.start_date || ''} class="field-input-sm" />
              <input type="text" name="notes" value={food.notes || ''} placeholder="Notas" class="field-input-sm" />
            </div>
            <button type="submit" class="w-full rounded-xl bg-accent px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
              Guardar cambios
            </button>
          </form>

        </Card>
      ))}
    </div>
  )}

  <script>
    // Toggle form
    const toggleBtn = document.getElementById('toggle-food-form');
    const formBody = document.getElementById('food-form-body');
    const toggleIcon = document.getElementById('toggle-food-icon');
    toggleBtn?.addEventListener('click', () => {
      const isOpen = !formBody?.classList.contains('hidden');
      formBody?.classList.toggle('hidden');
      if (toggleIcon) toggleIcon.style.transform = isOpen ? '' : 'rotate(180deg)';
    });

    // Edit / cancel
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });
  </script>
</MainLayout>
