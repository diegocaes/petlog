---
import MainLayout from '../layouts/MainLayout.astro';
import Card from '../components/ui/Card.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import EmptyState from '../components/ui/EmptyState.astro';
import { formatDate } from '../lib/utils';

const { supabase, user } = Astro.locals;

const { data: pet } = await supabase
  .from('pets')
  .select('id')
  .eq('user_id', user.id)
  .single();

if (!pet) return Astro.redirect('/perfil?new=1');

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('_action') as string;

  if (action === 'add') {
    await supabase.from('foods').insert({
      pet_id: pet.id,
      brand: formData.get('brand') as string,
      type: formData.get('type') as string,
      amount_grams: formData.get('amount_grams') ? Number(formData.get('amount_grams')) : null,
      frequency: (formData.get('frequency') as string) || null,
      start_date: (formData.get('start_date') as string) || null,
      notes: (formData.get('notes') as string) || null,
    });
  }

  if (action === 'edit') {
    const foodId = formData.get('food_id') as string;
    await supabase.from('foods').update({
      brand: formData.get('brand') as string,
      type: formData.get('type') as string,
      amount_grams: formData.get('amount_grams') ? Number(formData.get('amount_grams')) : null,
      frequency: (formData.get('frequency') as string) || null,
      start_date: (formData.get('start_date') as string) || null,
      notes: (formData.get('notes') as string) || null,
    }).eq('id', foodId);
  }

  if (action === 'delete') {
    const foodId = formData.get('food_id') as string;
    await supabase.from('foods').delete().eq('id', foodId);
    return Astro.redirect('/alimentacion?deleted=1');
  }

  return Astro.redirect('/alimentacion?saved=1');
}

const { data: foods } = await supabase
  .from('foods')
  .select('*')
  .eq('pet_id', pet.id)
  .order('created_at', { ascending: false });

const foodTypes: Record<string, string> = {
  croquetas: 'Croquetas',
  humedo: 'Húmedo / Lata',
  barf: 'BARF / Natural',
  mixto: 'Mixto',
  snacks: 'Snacks',
  otro: 'Otro',
};
---

<MainLayout title="Alimentación">
  <SectionHeader title="Alimentación" subtitle="Control de dieta de tu mascota" />

  <!-- Add Food Form -->
  <Card class="mb-5 animate-fade-up animate-fade-up-delay-1">
    <h2 class="text-xs font-semibold text-muted uppercase tracking-widest mb-4">Registrar alimento</h2>
    <form method="POST" class="space-y-4">
      <input type="hidden" name="_action" value="add" />
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Marca <span class="text-red-500">*</span></label>
        <input type="text" name="brand" required placeholder="Ej: Royal Canin" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Tipo <span class="text-red-500">*</span></label>
          <select name="type" required class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20">
            <option value="croquetas">Croquetas</option>
            <option value="humedo">Húmedo / Lata</option>
            <option value="barf">BARF / Natural</option>
            <option value="mixto">Mixto</option>
            <option value="snacks">Snacks</option>
            <option value="otro">Otro</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Cantidad (g)</label>
          <input type="number" name="amount_grams" placeholder="Ej: 200" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Frecuencia</label>
          <select name="frequency" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20">
            <option value="">Seleccionar</option>
            <option value="1x">1 vez al día</option>
            <option value="2x">2 veces al día</option>
            <option value="3x">3 veces al día</option>
            <option value="libre">Libre acceso</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Desde</label>
          <input type="date" name="start_date" class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Notas</label>
        <textarea name="notes" rows="2" placeholder="Observaciones, alergias..." class="w-full rounded-xl border border-card-border bg-white px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20 resize-none"></textarea>
      </div>
      <button type="submit" class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
        Registrar alimento
      </button>
    </form>
  </Card>

  <!-- Food List -->
  {(!foods || foods.length === 0) ? (
    <EmptyState
      icon="food"
      title="Sin alimentos registrados"
      description="Registra el primer alimento de tu mascota"
    />
  ) : (
    <div class="space-y-3">
      {foods.map((food, i) => (
        <Card variant="elevated" class:list={['animate-fade-up', i < 5 && `animate-fade-up-delay-${Math.min(i + 1, 5)}`]}>
          {/* View */}
          <div class="item-view" data-id={food.id}>
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-start gap-3 flex-1 min-w-0">
                <div class="shrink-0 rounded-xl bg-amber/10 p-2.5 text-amber-dark">
                  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="font-semibold text-gray-800">{food.brand}</p>
                  <p class="text-xs text-gray-400 mt-0.5">
                    {foodTypes[food.type] || food.type}
                    {food.amount_grams && ` · ${food.amount_grams}g`}
                    {food.frequency && ` · ${food.frequency}`}
                  </p>
                  {food.start_date && (
                    <p class="text-xs text-gray-400 mt-0.5">Desde: {formatDate(food.start_date)}</p>
                  )}
                  {food.notes && (
                    <p class="text-xs text-gray-400 mt-1">{food.notes}</p>
                  )}
                </div>
              </div>
              <div class="flex gap-1 shrink-0">
                <button type="button" class="edit-btn rounded-xl p-2 text-gray-300 transition-colors hover:bg-accent/10 hover:text-accent" data-id={food.id} title="Editar">
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                </button>
                <form method="POST">
                  <input type="hidden" name="_action" value="delete" />
                  <input type="hidden" name="food_id" value={food.id} />
                  <button type="submit" class="rounded-xl p-2 text-gray-300 transition-colors hover:bg-red-50 hover:text-red-500" title="Eliminar">
                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/></svg>
                  </button>
                </form>
              </div>
            </div>
          </div>

          {/* Edit */}
          <form method="POST" class="item-edit hidden space-y-3" data-id={food.id}>
            <input type="hidden" name="_action" value="edit" />
            <input type="hidden" name="food_id" value={food.id} />
            <div class="flex items-center justify-between mb-2">
              <p class="text-xs font-semibold text-accent uppercase tracking-wider">Editando</p>
              <button type="button" class="cancel-edit text-xs text-gray-400 hover:text-gray-600" data-id={food.id}>Cancelar</button>
            </div>
            <input type="text" name="brand" value={food.brand} required placeholder="Marca" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
            <div class="grid grid-cols-2 gap-3">
              <select name="type" required class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20">
                {Object.entries(foodTypes).map(([val, label]) => (
                  <option value={val} selected={food.type === val}>{label}</option>
                ))}
              </select>
              <input type="number" name="amount_grams" value={food.amount_grams || ''} placeholder="Gramos" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
            </div>
            <div class="grid grid-cols-2 gap-3">
              <select name="frequency" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20">
                <option value="">Frecuencia</option>
                <option value="1x" selected={food.frequency === '1x'}>1 vez/día</option>
                <option value="2x" selected={food.frequency === '2x'}>2 veces/día</option>
                <option value="3x" selected={food.frequency === '3x'}>3 veces/día</option>
                <option value="libre" selected={food.frequency === 'libre'}>Libre</option>
              </select>
              <input type="date" name="start_date" value={food.start_date || ''} class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20" />
            </div>
            <textarea name="notes" rows="2" placeholder="Notas" class="w-full rounded-xl border border-card-border bg-white px-3 py-2.5 text-sm text-gray-800 placeholder-gray-400 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20 resize-none">{food.notes || ''}</textarea>
            <button type="submit" class="w-full rounded-xl bg-accent px-4 py-2.5 text-sm font-semibold text-white transition-all hover:bg-accent-dark active:scale-95">
              Guardar cambios
            </button>
          </form>
        </Card>
      ))}
    </div>
  )}

  <script>
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.add('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.remove('hidden');
      });
    });
    document.querySelectorAll('.cancel-edit').forEach(btn => {
      btn.addEventListener('click', () => {
        const id = (btn as HTMLElement).dataset.id;
        document.querySelector(`.item-view[data-id="${id}"]`)?.classList.remove('hidden');
        document.querySelector(`.item-edit[data-id="${id}"]`)?.classList.add('hidden');
      });
    });
  </script>
</MainLayout>
