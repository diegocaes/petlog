---
import '../styles/global.css';
import { createSupabaseClient } from '../lib/supabase';

// This page requires an active session (established by the recovery link via /api/auth/callback)
const supabase = createSupabaseClient(Astro.request, Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

// If no session, the recovery link was invalid or expired
if (!user) {
  return Astro.redirect('/login?error=link_expired');
}

let success = false;
let errorMsg = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const password = formData.get('password') as string;
  const confirm = formData.get('confirm_password') as string;

  if (password !== confirm) {
    errorMsg = 'Las contraseñas no coinciden.';
  } else if (password.length < 8) {
    errorMsg = 'La contraseña debe tener al menos 8 caracteres.';
  } else {
    const { error } = await supabase.auth.updateUser({ password });
    if (error) {
      errorMsg = 'No se pudo actualizar la contraseña. El enlace puede haber expirado.';
    } else {
      success = true;
    }
  }
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#7CB974" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" /></noscript>
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" href="/icons/icon-192.png" />
    <title>Nueva contraseña | PetLog</title>
  </head>
  <body class="flex min-h-screen bg-canvas">
    <!-- Left panel (hidden on mobile) -->
    <div class="hidden lg:flex lg:flex-col lg:w-105 lg:shrink-0 bg-sidebar text-white p-10 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 -left-20 h-64 w-64 rounded-full bg-accent blur-3xl"></div>
        <div class="absolute bottom-20 right-10 h-48 w-48 rounded-full bg-amber blur-3xl"></div>
      </div>
      <div class="relative">
        <a href="/" class="flex items-center mb-12 hover:opacity-80 transition-opacity">
          <img src="/PetLog-logo.svg" alt="PetLog" style="height:64px;width:auto;filter:brightness(0) invert(1);" />
        </a>
        <h2 class="text-3xl font-bold leading-tight mb-4">El diario digital<br/>de tu mascota</h2>
        <p class="text-white/60 text-sm leading-relaxed">Registra vacunas, visitas al veterinario, peso, aventuras y vuelos en un solo lugar.</p>
      </div>
      <div class="relative mt-auto">
        <p class="text-xs text-white/30">Hecho con ❤️ para los amantes de sus mascotas</p>
      </div>
    </div>

    <!-- Right panel -->
    <div class="flex flex-1 items-center justify-center p-6">
      <div class="w-full max-w-sm">
        <!-- Mobile logo -->
        <div class="mb-8 text-center lg:hidden animate-fade-up">
          <a href="/" class="inline-flex items-center hover:opacity-80 transition-opacity">
            <img src="/PetLog-logo.svg" alt="PetLog" style="height:56px;width:auto;" />
          </a>
        </div>

        <div class="animate-fade-up lg:animate-none">
          {success ? (
            <!-- Success state -->
            <div class="text-center">
              <div class="mx-auto mb-5 flex h-16 w-16 items-center justify-center rounded-2xl bg-accent/10">
                <svg class="h-8 w-8 text-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M20 6 9 17l-5-5"/>
                </svg>
              </div>
              <h2 class="text-xl font-bold text-ink mb-2">¡Contraseña actualizada!</h2>
              <p class="text-sm text-muted mb-6">Tu contraseña ha sido cambiada correctamente. Ya puedes entrar con tu nueva contraseña.</p>
              <a href="/dashboard" class="block w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white text-center transition-all hover:bg-accent-dark active:scale-95">
                Ir al dashboard
              </a>
            </div>
          ) : (
            <!-- Form state -->
            <>
              <h2 class="text-xl font-bold text-ink mb-1">Nueva contraseña</h2>
              <p class="text-sm text-muted mb-6">Elige una nueva contraseña para tu cuenta.</p>

              {errorMsg && (
                <div class="mb-4 rounded-xl bg-red-50 border border-red-200 px-4 py-3 text-sm text-red-700">
                  {errorMsg}
                  {errorMsg.includes('expirado') && (
                    <p class="mt-1">
                      <a href="/forgot-password" class="font-semibold underline">Solicitar un nuevo enlace</a>
                    </p>
                  )}
                </div>
              )}

              <form method="POST" class="space-y-4" id="update-form">
                <div>
                  <label class="block text-sm font-medium text-ink mb-1.5">Nueva contraseña</label>
                  <input
                    type="password"
                    name="password"
                    required
                    minlength="8"
                    autofocus
                    placeholder="Mínimo 8 caracteres"
                    class="w-full rounded-xl border border-card-border bg-white px-4 py-2.5 text-ink placeholder-muted text-sm transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-ink mb-1.5">Confirmar contraseña</label>
                  <input
                    type="password"
                    name="confirm_password"
                    required
                    minlength="8"
                    placeholder="Repite tu nueva contraseña"
                    class="w-full rounded-xl border border-card-border bg-white px-4 py-2.5 text-ink placeholder-muted text-sm transition-all duration-200 hover:border-gray-300 focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/20"
                  />
                </div>
                <button
                  type="submit"
                  id="submit-btn"
                  class="w-full rounded-xl bg-accent px-6 py-2.5 text-sm font-semibold text-white transition-all duration-200 hover:bg-accent-dark active:scale-95"
                >
                  Guardar contraseña
                </button>
              </form>
            </>
          )}
        </div>
      </div>
    </div>

    <script>
      const form = document.getElementById('update-form') as HTMLFormElement;
      const btn = document.getElementById('submit-btn') as HTMLButtonElement;

      // Client-side password match check
      form?.addEventListener('submit', (e) => {
        const password = (form.querySelector('input[name="password"]') as HTMLInputElement)?.value;
        const confirm = (form.querySelector('input[name="confirm_password"]') as HTMLInputElement)?.value;
        if (password !== confirm) {
          e.preventDefault();
          const existing = form.querySelector('.client-error') as HTMLElement | null;
          if (!existing) {
            const msg = document.createElement('p');
            msg.className = 'client-error text-xs text-red-500 mt-1';
            msg.textContent = 'Las contraseñas no coinciden.';
            form.querySelector('input[name="confirm_password"]')?.insertAdjacentElement('afterend', msg);
          }
          return;
        }
        if (btn) {
          btn.textContent = 'Guardando...';
          btn.disabled = true;
        }
      });
    </script>
  </body>
</html>
