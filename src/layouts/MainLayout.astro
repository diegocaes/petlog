---
import Sidebar from '../components/Sidebar.astro';
import FormEnhancements from '../components/ui/FormEnhancements.astro';
import Toast from '../components/ui/Toast.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'El diario digital de tu mascota' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#13161C" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" /></noscript>
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" href="/icons/icon-192.png" />
    <link rel="apple-touch-icon" href="/icons/icon-192.png" />
    <title>{title} | PetLog</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-canvas">
    <Sidebar />

    <!-- Mobile top bar spacer -->
    <div class="h-13 lg:hidden"></div>

    <!-- Main content â€” offset by sidebar on desktop -->
    <main class="lg:ml-55 px-4 py-6 sm:px-6 lg:px-8 max-w-full">
      <div class="mx-auto max-w-3xl">
        <slot />
      </div>
    </main>

    <Toast />
    <FormEnhancements />

    <script>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js').catch(() => {});
      }
    </script>
  </body>
</html>
